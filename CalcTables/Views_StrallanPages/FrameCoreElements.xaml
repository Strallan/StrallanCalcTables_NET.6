<UserControl x:Class="CalcTables.FrameCoreElements"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CalcTables"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Background="#3b3b3b">
    <Grid
        x:Name="controlGrid"
        >
        <!-- Stub-element
        
        <TextBlock
            x:Name="stubText"
            VerticalAlignment="Center"
            HorizontalAlignment="Center"
            Foreground="Wheat"
            FontSize="70"
            >
        </TextBlock>
        -->

        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <StackPanel
            Grid.Column="1"
            >
            <TextBox 
                x:Name="nodeName"
                Text="{Binding AddingNodeName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
            <Button 
                Content="Add new node"
                Command="{Binding AddNewNodeCmd}"
                />
        </StackPanel>
    </Grid>
</UserControl>
